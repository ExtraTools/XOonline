# DiLauncher Environment Configuration

# ===========================================
# ОСНОВНЫЕ НАСТРОЙКИ СЕРВЕРА
# ===========================================

# Порт сервера
PORT=3000

# Хост (для продакшена оставьте 0.0.0.0)
HOST=0.0.0.0

# Окружение (development, production, test)
NODE_ENV=development

# Уровень логирования (error, warn, info, debug)
LOG_LEVEL=info

# ===========================================
# БАЗА ДАННЫХ
# ===========================================

# PostgreSQL для продакшена (оставьте пустым для SQLite в development)
DATABASE_URL=

# Настройки PostgreSQL (если не используете DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dilauncher
DB_USER=dilauncher_user
DB_PASSWORD=your_secure_password

# Включить SSL для БД (true/false)
DB_SSL=false

# ===========================================
# БЕЗОПАСНОСТЬ И АВТОРИЗАЦИЯ
# ===========================================

# Секретные ключи для JWT (ОБЯЗАТЕЛЬНО ИЗМЕНИТЕ В ПРОДАКШЕНЕ!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production

# Секрет для сессий
SESSION_SECRET=your-session-secret-key-change-in-production

# ===========================================
# OAUTH НАСТРОЙКИ
# ===========================================

# Google OAuth (получите на https://console.developers.google.com)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Discord OAuth (получите на https://discord.com/developers/applications)
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# ===========================================
# CORS И ФРОНТЕНД
# ===========================================

# Разрешенные домены для CORS (разделенные запятой)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# URL фронтенда для редиректов после OAuth
FRONTEND_URL=http://localhost:3000

# ===========================================
# ВНЕШНИЕ СЕРВИСЫ
# ===========================================

# Email сервис (для уведомлений)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis для кэширования (опционально)
REDIS_URL=redis://localhost:6379

# ===========================================
# MINECRAFT ИНТЕГРАЦИЯ
# ===========================================

# API ключи для модов и версий (если требуются)
CURSEFORGE_API_KEY=your-curseforge-api-key
MODRINTH_API_KEY=your-modrinth-api-key

# ===========================================
# РАЗРАБОТКА
# ===========================================

# Включить подробные логи ошибок (только для разработки)
DEBUG=dilauncher:*

# Отключить rate limiting (только для разработки)
DISABLE_RATE_LIMITING=false

# Включить mock-данные для тестирования
ENABLE_MOCK_DATA=false 