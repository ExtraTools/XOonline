{
  "name": "dilauncher",
  "version": "2.0.0",
  "description": "DiLauncher - современный лаунчер для Minecraft с управлением профилями, модов и серверов",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "build": "echo \"No build step required for backend\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.js\"",
    "format:check": "prettier --check \"**/*.js\"",
    "docker:build": "docker build -t dilauncher .",
    "docker:run": "docker run -p 3000:3000 dilauncher",
    "db:reset": "node scripts/reset-db.js"
  },
  "keywords": [
    "minecraft",
    "launcher",
    "mods",
    "modpacks",
    "gaming-platform",
    "fabric",
    "forge",
    "curseforge",
    "modrinth",
    "gaming",
    "multiplayer",
    "mod-manager",
    "server-browser"
  ],
  "author": "DiLauncher Team <support@dilauncher.com>",
  "license": "MIT",
  "homepage": "https://dilauncher.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/waitdino/DiLauncher.git"
  },
  "bugs": {
    "url": "https://github.com/waitdino/DiLauncher/issues"
  },
  "dependencies": {
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.1",
    "express-mongo-sanitize": "^2.2.0",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "dotenv": "^16.4.7",
    "compression": "^1.7.5",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sqlite3": "^5.1.7",
    "uuid": "^11.0.5",
    "socket.io": "^4.8.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-discord": "^0.1.4",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.2",
    "axios": "^1.7.9",
    "cheerio": "^1.0.0-rc.12",
    "archiver": "^6.0.1",
    "unzipper": "^0.10.14",
    "fs-extra": "^11.2.0",
    "mime-types": "^2.1.35",
    "winston": "^3.11.0",
    "node-cron": "^3.0.3",
    "joi": "^17.12.2",
    "nodemailer": "^6.9.9",
    "redis": "^4.6.12",
    "ioredis": "^5.3.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.9",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "@types/node": "^20.11.19",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "files": [
    "server.js",
    "server/",
    "scripts/",
    "public/",
    "package.json",
    "README.md"
  ]
}
