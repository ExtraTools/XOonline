# DiLauncher Test Environment Configuration

# Окружение
NODE_ENV=test

# Сервер
PORT=3001
HOST=localhost

# Логирование
LOG_LEVEL=error

# База данных (SQLite в памяти для тестов)
DATABASE_URL=:memory:

# JWT секреты для тестов
JWT_SECRET=test-jwt-secret-key-for-testing
JWT_REFRESH_SECRET=test-refresh-secret-key-for-testing

# Сессии
SESSION_SECRET=test-session-secret

# CORS
CORS_ORIGIN=http://localhost:3001

# Отключаем внешние сервисы в тестах
DISABLE_RATE_LIMITING=true
ENABLE_MOCK_DATA=true

# Отключаем OAuth в тестах
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# Email (моки)
SMTP_HOST=test
SMTP_PORT=587
SMTP_USER=test@test.com
SMTP_PASS=test

# Redis (отключен в тестах)
REDIS_URL=